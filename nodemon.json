{
  "watch": ["api"],
  "ext": "ts,mts,js,json",
  "ignore": [
    "api/dist/*",
    "node_modules/*",
    ".git/*",
    "*.log",
    "*.tmp"
  ],
  "exec": "tsx api/server.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 2000,
  "legacyWatch": false,
  "restartable": "rs",
  "verbose": false
}